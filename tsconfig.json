{
    "compilerOptions": {
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "pretty": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "lib": ["esnext"],
        "target": "es5",
        "outDir": "build"
    },
    "include": [
        "*.ts",
        "**/*.js"
    ]
}